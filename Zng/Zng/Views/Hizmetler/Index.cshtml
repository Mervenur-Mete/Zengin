@model IEnumerable<Zng.Models.Hizmetler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div class="content-lg container">

</div>*@

<div class="content-lg container">
    <div class="row">
        <div class="col-md-12 mx-auto"></div>
    </div>
    <h2 style=" text-align: center;color:red">HİZMETLER LİSTESİ</h2>
    <a class="btn btn-info btn-sm" href="/Hizmetler/Create">
        <i class="fa fa-wrench" aria-hidden="true"></i> YENİ HİZMET EKLE
    </a>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    BAŞLIK
                </th>
                <th>
                    İÇERİK
                </th>
                <th>
                    IMAGE NAME
                </th>
                <th>
                    TARİH
                </th>
                <th>
                    DESCRİPTİON
                </th>
                <th>
                    KEYWORD
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.OrderByDescending(x => x.Id))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Icerik)
                    </td>
                    <td>
                        <img class="img-thumbnail" src="~/Images/@item.ImageName" alt="Resim Yok" width="300" height="200">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tarih)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Keyword)
                    </td>
                    <td>
                        @Html.ActionLink("DÜZENLE", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("DETAY", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                        @Html.ActionLink("SİL", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

    </table>
</div>

